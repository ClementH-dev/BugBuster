{% extends 'base.html.twig' %}

{% block title %}Register | BugBuster{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-lg">
            <div class="text-center mb-6">
                <h1 class="text-2xl font-semibold text-gray-900">Join BugBuster</h1>
                <p class="text-gray-500">Create your account</p>
            </div>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="p-3 text-sm text-red-600 bg-red-100 rounded-md mb-4">
                    {{ flash_error }}
                </div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
                <div>
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
                
                <div class="flex items-center gap-2">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
                    {{ form_label(registrationForm.agreeTerms) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
                
                <button type="submit" class="w-full py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
