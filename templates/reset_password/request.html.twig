{% extends 'base.html.twig' %}

{% block title %}Reset your password | BugBuster{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-lg">
            <div class="text-center mb-6">
                <h1 class="text-2xl font-semibold text-gray-800">Reset Your Password</h1>
                <p class="text-gray-500">Enter your email address and we will send you a link to reset your password.</p>
            </div>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="p-3 text-sm text-red-600 bg-red-100 rounded-md">
                    {{ flash_error }}
                </div>
            {% endfor %}

            {{ form_start(requestForm) }}
                <div class="mb-4">
                    {{ form_label(requestForm.email, 'Email Address', {'class': 'block text-sm font-medium text-gray-700'}) }}
                    {{ form_widget(requestForm.email, {'attr': {'class': 'w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none'}}) }}
                    {{ form_errors(requestForm.email) }}
                </div>

                <div class="mb-4 text-sm text-gray-600">
                    <small>Enter your email address, and we will send you a link to reset your password.</small>
                </div>

                <button type="submit" class="w-full px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400">
                    Send password reset email
                </button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
