{% extends 'base.html.twig' %}

{% block title %}Tests{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-2xl">
        <h1 class="text-3xl font-semibold text-gray-900 mb-6 text-center">Détails du Test</h1>

        <div class="overflow-hidden shadow-md rounded-lg">
            <table class="w-full border-collapse">
                <tbody>
                    <tr class="border-b">
                        <th class="p-4 text-left text-gray-700">ID</th>
                        <td class="p-4">{{ test.id }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-gray-700">Nom</th>
                        <td class="p-4">{{ test.name }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-gray-700">Description</th>
                        <td class="p-4">{{ test.description }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-gray-700">Étapes</th>
                        <td class="p-4">{{ test.steps }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-gray-700">Critères d'acceptation</th>
                        <td class="p-4">{{ test.acceptanceCriteria }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-gray-700">Résultat Attendu</th>
                        <td class="p-4">{{ test.excectedResult }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-gray-700">Résultat Actuel</th>
                        <td class="p-4">{{ test.actualResult }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="p-4 text-left text-gray-700">Statut</th>
                        <td class="p-4">
                            {% if test.status == 'en_cours' %}
                                <span class="px-3 py-1 text-orange-700 bg-orange-100 border border-orange-500 rounded-lg">En cours</span>
                            {% elseif test.status == 'reussi' %}
                                <span class="px-3 py-1 text-green-700 bg-green-100 border border-green-500 rounded-lg">Réussi</span>
                            {% elseif test.status == 'echoue' %}
                                <span class="px-3 py-1 text-red-700 bg-red-100 border border-red-500 rounded-lg">Échoué</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="p-4 text-left text-gray-700">Créé le</th>
                        <td class="p-4">{{ test.createdAt ? test.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th class="p-4 text-left text-gray-700">Mis à jour le</th>
                        <td class="p-4">{{ test.updatedAt? test.updatedAt|date('Y-m-d H:i:s') : 'Pas encore mis à jour' }}</td>
                    </tr>
                    <tr>
                        <th class="p-4 text-left text-gray-700">Créé par</th>
                        <td class="p-4">{{ test.createdBy }}</td>
                    </tr>
                    <tr>
                        <th class="p-4 text-left text-gray-700">Mis à jour par</th>
                        <td class="p-4">{{ test.updatedBy? test.updatedAt : 'Pas encore mis à jour' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-6 flex justify-between">
            <a href="{{ path('app_tests_index') }}" class="px-4 py-2 text-white bg-gray-600 rounded-lg hover:bg-gray-700">Retour à la liste</a>
            <div class="flex gap-2">
                {{ include('tests/_delete_form.html.twig') }}
                <a href="{{ path('app_tests_edit', {'id': test.id}) }}" class="px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700">Modifier</a>
            </div>
        </div>

    </div>
{% endblock %}
